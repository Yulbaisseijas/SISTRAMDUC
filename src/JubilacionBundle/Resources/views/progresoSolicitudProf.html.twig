{% extends '::base.html.twig' %}

{% block opcionsidebar %}
    <li data-route="jubilacion-informacion">
        <a href="{{ path('jubilacion-informacion') }}"><i class="fa fa-circle-o"></i>Requisitos</a>
    </li>
    <li data-route="jubilacion-solicitud">
        <a href="{{ path('jubilacion-solicitud') }}"><i class="fa fa-circle-o"></i>Realizar Solicitud</a>
    </li>>
{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <h1>Estatus de Solicitud de Jubilación</h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-fw fa-child"></i> Jubilación</a></li>
            <li class="active">Estado Solicitud </li>
        </ol>
    </div>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                {% if tramite_actual %}
                    {% for actual in tramite_actual %}
                        <ul class="timeline">
                            <li class="time-label">
                                <span class="bg-aqua">
                                    {{ actual.getfecha_recibido()|date('d-m-Y') }}
                                </span>
                            </li>
                            <li>
                                <i class="fa fa-send bg-blue"></i>

                                <div class="timeline-item">
                                    {#<span class="time"><i class="fa fa-clock-o"></i> {{ actual.getFechaRecibido()|date('H:i') }}</span>#}
                                    <h3 class="timeline-header">Su solicitud ha sido enviada con éxito y se encuentra pendiente por revisión.</h3>
                                </div>
                            </li>
                            {% if actual.getTransicion().getFecha() == actual.getfecha_recibido() %}
                                <li class="time-label">
                                    <span class="bg-aqua">
                                        {{ "now"|date('d-m-Y') }}
                                    </span>
                                </li>
                                <li>
                                    <i class="fa fa-envelope bg-yellow"></i>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header">Su solicitud aún no ha sido evaluada.</h3>
                                    </div>
                                </li>
                            {% else %}
                                <li class="time-label">
                                    <span class="bg-purple">
                                        {{ actual.getTransicion().getFecha()|date('d-m-Y') }}
                                    </span>
                                </li>
                                <li>
                                    {% if actual.getTransicion().getEstado() == "Aprobada" %}
                                        <i class="fa fa-envelope bg-green"></i>
                                        <div class="timeline-item">
                                            <h3 class="timeline-header"><a href="#">Respuesta</a></h3>
                                            <div class="timeline-body">
                                                Estado: {{  actual.getTransicion().getEstado() }}
                                                Motivo: {{ actual.getTransicion().getDoc_info() }}
                                            </div>
                                        </div>
                                    {% else %}
                                        <i class="fa fa-envelope bg-red"></i>
                                        <div class="timeline-item">
                                            <h3 class="timeline-header">Su solicitud aún no ha sido evaluada.</h3>
                                        </div>
                                    {% endif %}
                                </li>
                            {% endif %}
                            <li>
                                <i class="fa fa-clock-o bg-gray"></i>
                            </li>
                        </ul>
                    {% endfor %}
                {% else %}
                    <br/>
                    <div class="col-xs-10">
                        <div class="alert alert-danger alert-dismissible">
                            <h4><i class="icon fa fa-ban"></i> Advertencia!</h4>
                            <h4>Usted no ha realizado una solicitud de Jubilación.</h4>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>
    <!-- /.content -->
{% endblock %}