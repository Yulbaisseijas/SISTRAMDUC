{% extends 'base.html.twig' %}

{% block content %}
    <section class="content-header">
        <h1>
            Solicitudes de Comisión de Servicio
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-fw fa-money"></i> Comisión de Servicio</li>
            <li class="active">Revisar Solicitudes</li>
            <li class="active">Solicitud {{ tramite.id }}</li>
        </ol>
    </section>
    <section class="content">
        <!-- Default box -->
        <div class="box box-solid box-default">
            <section class="content">
                <div class="box">
                    <table>
                        <tr>
                            <th>
                                <h4>Solicitud Nº<b> {{ tramite.id }}</b></h4>
                            </th>
                        </tr>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>
                                <h5><b>Nombres y Apellidos:</b>&nbsp;&nbsp;{{ tramite.getUsuarioId().getNombreCompleto() }}</h5>
                                <h5><b>Cédula de Identidad:</b>&nbsp;&nbsp;{{ tramite.getUsuarioId().getCedula() }}</h5>
                                <h5><b>Nacionalidad:</b>&nbsp;&nbsp;{{ tramite.getUsuarioId().getNacionalidad() }}</h5>
                                <h5><b>Correo:</b>&nbsp;&nbsp;{{ tramite.getUsuarioId().getCorreo() }}</h5>
                                <h5><b>Tlf:</b>&nbsp;&nbsp;{{ tramite.getUsuarioId().getTelefono() }}</h5>

                                <h5><b>Recaudos</b></h5>
                                {% for recaudo in recaudos %}
                                    <a href="{{ asset('uploads/recaudos/' ~ recaudo) }}">
                                        <button type="button" class="btn btn-default btn-block">{{ recaudo.getName() }}.{{ recaudo.getPath() }}</button>
                                    </a>
                                {% endfor %}
                            </th>
                        </tr>
                    </table>
                    {#<div class="box-header">
                        <h3 class="box-title">Solcitiud n° {{ tramite.id }}</h3>
                    </div>

                    <div class="col-md-6">
                        <div class="box-body">
                            <h4>
                                <b>{{ tramite.getUsuarioId().getNombreCompleto() }} </b>
                                C.I. {{ tramite.getUsuarioId().getCedula() }}
                                <br><br>
                                {% for cargo in tramite.getUsuarioId().getCargos() %}
                                    {{ cargo.getDescription }}
                                {% endfor %}
                            </h4>
                            <h4>Recaudos</h4>
                            {% for recaudo in recaudos %}
                                <a href="{{ asset('uploads/recaudos/' ~ recaudo) }}">
                                    <button type="button" class="btn btn-default btn-block">{{ recaudo.getName() }}.{{ recaudo.getPath() }}</button>
                                </a>
                            {% endfor %}
                        </div>
                    </div>#}
                </div>
            </section>
        </div>
    </section>
{% endblock %}

