{% extends '::base.html.twig' %}
{% block content %}
    <section class="content-header">
        <h1>
            Comisión de Servicio
        </h1>
        <ol class="breadcrumb">
            <li><i class="fa fa-fw fa-money"></i> Comisión de Servicio</li>
            <li class="active">Revisar Solicitudes</li>
        </ol>
    </section>
    <!-- Content Wrapper. Contains page content -->
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box box-solid box-default">
            <div class="box-header with-border">
                <h3 class="box-title"><b>Solicitudes</b></h3>
            </div>

            <section class="content">
                <div class="row">
                    <div class="col-xs-12">
                        <!--<div class="box">--->
                        <div class="box-header">
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body table-responsive no-padding">
                            <table class="table table-hover">
                                <tr>
                                    <th>Nº Solicitud</th>
                                    <th>Solicitante</th>
                                    <th>Estado</th>
                                    <th>Motivo</th>
                                </tr>
                                {% for tramite_comision in tramites_comision %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('comision_servicio_ver_solicitud', { 'id': tramite_comision.id }) }}">
                                                <button type="button" class="btn normal" data-toggle="modal">
                                                    <i class="fa fa-info-circle"></i>&nbsp;&nbsp;{{ tramite_comision.id }}
                                                </button>
                                            </a>
                                        </td>
                                        <td>{{ tramite_comision.getUsuarioId().getNombreCompleto() }}</td>
                                        <td><span class="label label-success">{{ tramite_comision.getTransicion().getEstado() }}</span></td>
                                        <td>Bacon ipsum dolor sit amet salami venison chicken flank fatback doner.</td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <!--Modal-->
        {#<div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title" align="center"><b>Información del Solicitante</b></h4>
                    </div>
                    <div class="modal-body">
                        <table id="tramite">

                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>#}
    </section>
{% endblock %}

