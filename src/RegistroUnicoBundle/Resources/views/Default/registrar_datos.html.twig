  <script src="{{ asset('assets/js/RegistroUnico/iniRD.js') }}"></script>
  <script src="{{ asset('assets/js/RegistroUnico/configTable.js') }}"></script>
  <script src="{{ asset('assets/js/RegistroUnico/showField.js') }}"></script>
  <script src="{{ asset('assets/js/RegistroUnico/insertAndDeleteTable.js') }}"></script>
