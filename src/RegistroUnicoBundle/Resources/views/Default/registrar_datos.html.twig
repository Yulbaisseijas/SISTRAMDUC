{% extends 'base.html.twig' %}

{% block stylesheets %}
      <link href="//cdn.rawgit.com/Eonasdan/bootstrap-datetimepicker/e8bddc60e73c1ec2475f827be36e1957af72e2ea/build/css/bootstrap-datetimepicker.css" rel="stylesheet">
{% endblock %}

{% block content %}
    <!--User data header-->
    <section class="content-header">
      <h1>Registrar Datos</h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-fa fa-address-card-o"></i>Registro único</li>
        <li class="active">Registrar datos</li>
      </ol>
    </section>
    <!--User data header-->
    <br/>
     <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">
      
        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Usuarios registrados</h4>
          </div>
          <div class="modal-body">
            <table id="table-5" class="table table-bordered table-striped">
              <thead>
              <tr>
                <th>Email</th>
                <th>Rol</th>
                <th>Estatus</th>
              </tr>
              </thead>
              <tbody>
              </tbody>
              <tfoot>
              <tr>
               <th>Email</th>
               <th>Rol</th>
               <th>Estatus</th>
              </tr>
              </tfoot>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
        
      </div>
    </div>
    <!--User data body-->
    <form>
      <div class="row">
        <section class="content-body">
            <!--Alert message-->
            <div id="alertData" class="col-md-offset-1 col-md-10 alert alert-danger hidden">
                  El usuario no se encuentra registrado o esta inactivo. 
            </div>
            <!--Alert message-->
            <!--seccion for generate box-->
            <div class="col-md-offset-1 col-md-10">
              <div class="box box-info">
                  <div class="box-header with-border">
                    <div class="row">
                      <div class="col-md-offset-1 col-md-5">
                        <div class="form-group has-feedback">
                              <input id="gemail" type="email" class="form-control" placeholder="Email del usuario">
                              <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                      </div>
                      <div class="col-md-2">
                        <div class="form-group has-feedback">
                              <button id="generate" type="button" class="btn btn-primary btn-block btn-flat">Generar</button>
                        </div>
                      </div>
                      <div class="col-md-2">
                        <div class="form-group has-feedback">
                              <button  id="viewUsers" type="button" class="btn btn-primary btn-block btn-flat" data-toggle="modal" data-target="#myModal">Ver usuarios</button>
                        </div>
                      </div>
                    </div>
                  </div>
               </div>
            </div>
            <!--seccion for generate boxes-->
          
            <!--personal and contact box-->
            <div id="form-1" class="col-md-offset-1 col-md-10 hidden">
              <!-- /.box-info -->
              <div class="box-footer">
                <strong>Sección para ingresar datos personales y de contactos.</strong>
              </div>
               <!-- /.box-header -->
              <div class="box box-warning">
                <div class="box-header with-border">
                  <h3 class="box-title">Sección 1</h3>
                  <div class="box-tools pull-right">
                    <button type="button" id="mini-1" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                  </div>
                </div>
                <!-- /.box-body --> 
                <div class="box-body">
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Primer nombre</label>
                        <input type="text" class="form-control" placeholder="Primer nombre" required>
                      </div>
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Segundo nombre</label>
                        <input type="text" class="form-control" placeholder="Segundo nombre" required>
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Primer apellido</label>
                        <input type="text" class="form-control" placeholder="Primer apellido" required>
                      </div>
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Segundo apellido</label>
                        <input type="text" class="form-control" placeholder="Segundo apellido" required>
                      </div>
                      <!-- /.form-group -->
                    </div>
                  </div>
                  <!-- /.row -->
                  <div class="row">
                    <!-- /.col -->
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Nacionalidad</label>
                        <input type="text" class="form-control" placeholder="Nacionalidad" required>
                      </div>
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Fecha de nacimiento</label>
                        <div class='input-group date' id='datetimepicker1'>
                            <input type='text' class="form-control" />
                            <span class="input-group-addon">
                                <span class="glyphicon glyphicon-calendar"></span>
                            </span>
                        </div>
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Edad</label>
                        <input type="number" class="form-control" placeholder="Edad" min="18" max="80" required>
                      </div>
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Sexo</label>
                        <select class="form-control select2" style="width: 100%;" required>
                          <option selected="selected">Seleccione una opción</option>
                          <option value="Masculino">Masculino</option>
                          <option value="Femenino">Femenino</option>
                        </select>
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                  </div>
                  <!-- /.row -->
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Cedula</label>
                        <input type="number" class="form-control" placeholder="Cedula">
                      </div>
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>RIF</label>
                        <input type="number" class="form-control" placeholder="RIF">
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Telefono</label>
                        <div class="row">
                            <div class="col-xs-4">
                              <input type="number" class="form-control" placeholder="Cod. Area" min="100" max="999">
                            </div>
                            <strong><label class="col-xs-1">—</label></strong>
                            <div class="col-xs-7">
                              <input type="number" class="form-control" placeholder="Nro. de telefono" min="1000000" max="9999999">
                            </div>
                        </div>
                      </div>  
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Dirección</label>
                        <textarea class="form-control" rows="3" placeholder="Dirección" style="resize:none"></textarea>
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                  </div>
                  <!-- /.row -->
                </div>
              </div>
              <!-- /.box -->
            </div>  
            <!--personal and contact data box-->
          
            <!--+carg box-->
            <div id="form-3" class="col-md-offset-1 col-md-10 hidden">
              <!-- /.box-info -->
              <div class="box-footer">
                <strong>Sección para ingresar los cargos desempeñados en la UC.</strong>
              </div>
               <!-- /.box-header -->
              <div class="box box-danger">
                <div class="box-header with-border">
                  <h3 class="box-title">Sección 2</h3>
                  <div class="box-tools pull-right">
                    <button type="button" id="mini-3" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                  </div>
                </div>
                <!-- /.box-body --> 
                <div class="box-body">
                  <div class="row">
                      <div class="col-md-12">
                        <!-- /.form-group -->
                        <div class="form-group">
                          <label>Cargos</label>
                          <select id="crg" class="form-control select2" style="width: 100%;">
                          </select>
                        </div>
                        <!-- /.form-group -->
                      </div>
                      <div class="col-md-offset-4 col-md-4">
                          <div class="form-group has-feedback">
                                <button id="ac" type="button" class="btn btn-primary btn-block btn-flat">Agregar cargo</button>
                          </div>
                      </div>
                  </div>
                  <hr/>
                  <table id="table-3" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                      <th>Cargo</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                    <tr>
                     <th>Cargo</th>
                    </tr>
                    </tfoot>
                  </table>
                </div>
                <!-- /.box -->
             </div>  
             <!--research,courses and studies box-->
            </div>
            <!--+carg box-->
 
            
            <!--research,courses and studies box-->
            <div id="form-2" class="col-md-offset-1 col-md-10 hidden">
              <!-- /.box-info -->
              <div class="box-footer">
                <strong>Sección para ingresar investigaciones, articulos, asistencias a congresos, estudios y cursos realizados.</strong>
              </div>
               <!-- /.box-header -->
              <div class="box box-success">
                <div class="box-header with-border">
                  <h3 class="box-title">Sección 3</h3>
                  <div class="box-tools pull-right">
                    <button type="button" id="mini-2" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                  </div>
                </div>
                <!-- /.box-body --> 
                <div class="box-body">
                  <div class="row">
                    <div class="col-md-6">
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Estatus</label>
                        <select id="estR" class="form-control select2" style="width: 100%;">
                        </select>
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Nivel de estudio</label>
                        <select id="neR" class="form-control select2" style="width: 100%;">
                        </select>
                      </div>
                    </div>
                    
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Tipo de registro</label>
                        <select id="tr" class="form-control select2" style="width: 100%;">
                        </select>
                      </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Descripción</label>
                        <input id="desR" type="text" class="form-control" placeholder="Nombre">
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-6">
                      <div class="form-group">
                        <label>Año de publicacion y/o asistencia</label>
                        <input id="anoR" type="number" class="form-control" placeholder="Año" min="1">
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <div id="em" class="col-md-12 hidden">
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Empresa</label>
                        <input id="empR" type="text" class="form-control" placeholder="Empresa">
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <div id="in" class="col-md-12 hidden">
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Institución</label>
                        <input id="insR" type="text" class="form-control" placeholder="Institución">
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <div class="col-md-offset-4 col-md-4">
                        <div class="form-group has-feedback">
                              <button id="ar" type="button" class="btn btn-primary btn-block btn-flat">Agregar registro</button>
                        </div>
                    </div>
                  </div>
                  <hr/>
                  <table id="table-1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Id del registro</th>
                    <th>Tipo de referencia</th>
                    <th>Descripción</th>
                    <th>Nivel</th>
                    <th>Estatus</th>
                    <th>Año de publicacion y/o asistencia</th>
                    <th>Empresa y/o institución</th>
                  </tr>
                  </thead>
                  <tbody>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Id del registro</th>
                    <th>Tipo de referencia</th>
                    <th>Descripción</th>
                    <th>Nivel</th>
                    <th>Estatus</th>
                    <th>Año de publicacion y/o asistencia</th>
                    <th>Empresa y/o institución</th>
                  </tr>
                  </tfoot>
                </table>
                <hr/>
                <div class="row">
                    <div class="col-md-12">
                      <h3>Participantes</h3>
                    </div>
                    <div class="col-md-4">
                      <!-- /.form-group -->
                      <div class="form-group">
                        <label>Nombre completo</label>
                        <input id="nomP" type="text" class="form-control" placeholder="Nombre del participantes">
                      </div>
                      <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Cedula</label>
                        <input id="cedP" type="number" class="form-control" placeholder="cedula" min="1">
                      </div>
                    </div>
                     <!-- /.col -->
                    <div class="col-md-4">
                      <div class="form-group">
                        <label>Id del registro</label>
                        <input id="idP" type="number" class="form-control" placeholder="Id del registro" min="1">
                      </div>
                    </div>
                    <div class="col-md-offset-4 col-md-4">
                        <div class="form-group has-feedback">
                              <button id="ap" type="button" class="btn btn-primary btn-block btn-flat">Agregar participante</button>
                        </div>
                    </div>
                </div>
                <hr/>
                <table id="table-2" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Id del registro</th>
                    <th>Nombre</th>
                    <th>Cedula</th>
                  </tr>
                  </thead>
                  <tbody>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>Id del registro</th>
                    <th>Nombre</th>
                    <th>Cedula</th>
                  </tr>
                  </tfoot>
                </table>
                <hr/>
                <div id="revista" class="hidden">
                  <div class="row">
                      <div class="col-md-12">
                        <h3>Revistas de publicación</h3>
                      </div>
                      <div class="col-md-6">
                        <!-- /.form-group -->
                        <div class="form-group">
                          <label>Descripcion</label>
                          <input id="nomR" type="text" class="form-control" placeholder="Nombre de la revista">
                        </div>
                        <!-- /.form-group -->
                      </div>
                      <!-- /.col -->
                      <div class="col-md-6">
                        <div class="form-group">
                          <label>Id del registro</label>
                          <input id="idR" type="number" class="form-control" placeholder="Id del registro" min="1">
                        </div>
                      </div>
                      <div class="col-md-offset-4 col-md-4">
                          <div class="form-group has-feedback">
                                <button id="arv" type="button" class="btn btn-primary btn-block btn-flat">Agregar revista</button>
                          </div>
                      </div>
                  </div>
                  <hr/>
                  <table id="table-4" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                      <th>Id del registro</th>
                      <th>Revista</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                    <tfoot>
                    <tr>
                      <th>Id del registro</th>
                      <th>Revista</th>
                    </tr>
                    </tfoot>
                  </table>
                </div>
              </div>
              <!-- /.box -->
            </div>  
            <!--research,courses and studies box-->
            </div>
        </section>
        <div id="save" class="col-md-offset-4 col-md-4 hidden">
            <div class="form-group has-feedback">
                  <button id="submitData" type="button" class="btn btn-primary btn-block btn-flat">Guardar Datos</button>
            </div>
        </div>
      </div>
      <!--User data body-->
    </form>
{% endblock %}

