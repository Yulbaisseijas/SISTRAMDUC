{% extends 'base.html.twig' %}

{% block content %}
    <section class="content-header">
      <h1>Registrar Usuario</h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-fa fa-address-card-o"></i>Regitro único</li>
        <li class="active">Registro de Usuarios</li>
      </ol>
    </section>
    
    <br/>
    <div class="row">
      <section class="content-body col-md-offset-2 col-md-8">
        <br/>
        <div class="register-box-body">
            <form>
               <img src="{{asset('assets/images/usuario.jpeg')}}" class="user-image col-sm-offset-5 col-xs-offset-3" alt="User Image">
              <div class="form-group has-feedback">
                <input type="email" class="form-control" placeholder="Email">
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
              </div>
              <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Contraseña">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
              </div>
              <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Repetir contraseña">
                <span class="glyphicon glyphicon-log-in form-control-feedback"></span>
              </div>
              <div class="form-group has-feedback">
                  <select class="form-control select2" style="width: 100%;">
                    <option selected="selected">Seleccione el tipo de usuario</option>
                    <option>Administrador</option>
                    <option>Docente</option>
                    <option>Otros</option>
                  </select>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <button type="submit" class="btn btn-primary btn-block btn-flat">Registrar</button>
                </div>
              </div>
            </form>
        </div>
      </section>
    </div>
    <br/><br/>
{% endblock %}

