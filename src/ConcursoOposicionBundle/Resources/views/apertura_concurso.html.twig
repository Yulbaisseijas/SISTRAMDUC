{% extends 'base.html.twig' %}

{% block content %} 
    <section class="content-header">
      <h1>
        Apertura del Concurso de Oposici&oacute;n
      </h1> 
      <ol class="breadcrumb">
        <li><i class="fa fa fa-users"></i> Oposici&oacute;n</li>
        <li class="active"> Apertura Concurso</li>
      </ol>
    </section>
 
    <br/>
    <div class="row">
      <!--Success message-->
      <section class="content-body col-md-offset-1 col-md-9">
        <br/>
        <div class="register-box-body">
            <form id="aperturaConcurso">

            	<div class="panel panel-danger hide" id="msgFracaso">
            		<div class="panel-heading">
            			<h3 class="panel-title"> <i class="glyphicon glyphicon-remove-circle" id="quitar"></i> Error</h3>
            		</div>
            		<div class="panel-body">
            			<h4>Debe llenar todos los campos indicados.</h4>
            		</div>		            
		        </div>

		        <div class="panel panel-danger hide" id="msgFracaso1">
            		<div class="panel-heading">
            			<h3 class="panel-title"> <i class="glyphicon glyphicon-remove-circle" id="quitar1"></i> Error</h3>
            		</div>
            		<div class="panel-body">
            			<h4>Ocurri&oacute; un problema al insertar.</h4>
            		</div>		            
		        </div>

		        <div class="panel panel-success hide" id="msgExito">
            		<div class="panel-heading">
            			<h3 class="panel-title"> <i class="glyphicon glyphicon-remove-circle" id="quitar2"></i> Exito</h3>
            		</div>
            		<div class="panel-body">
            			<h4>Concurso Insertado.</h4>
            		</div>		            
		        </div>            	

	            <br/>

	            <div class="container">
	            <label>Fecha de Inicio
	            	<span id="spanfechaConcurso" class="label label-danger hide">Vac&iacute;o</span>
	            </label>
				    <div class="row">
				        <div class='col-sm-7'>
				            <div class="form-group">
				                <div class='input-group'>

					                  <input type='text' class="form-control" maxlength="10" id="fechaConcurso" placeholder="dd/MM/yyyy"/>
					              
				                    <span class="input-group-addon">
				                        <span class="glyphicon glyphicon-calendar"></span>				                        
				                    </span>
				                </div>
				            </div>
				        </div>
				    </div>
				</div>

				<div class="container">
	            <label>Cantidad de Vacantes
	            	<span id="spancedula" class="label label-danger hide">Vac&iacute;o</span>
	            	<span id="spancedula2" class="label label-danger hide">Esto no es un n&uacute;mero</span>
	            </label>
				    <div class="row">
				        <div class='col-sm-7'>
				            <div class="form-group">
				                <div class='input-group'>
				                    <input type="text" id="cedula" class="form-control" maxlength="3" required="true" placeholder="Ejemplo: 123" onkeypress="return justNumbers(event);"/>
				                    <span class="input-group-addon">
				                        <span class="fa fa-hashtag"></span>
				                    </span>
				                </div>
				            </div>
				        </div>
				    </div>
				</div>

				<div class="container">
	            <label>Area de Postulaci&oacute;n
	            	<span id="spanarea" class="label label-danger hide">Vac&iacute;o</span>
	            </label>
				    <div class="row">
				        <div class='col-sm-7'>
				            <div class="form-group">
				                <div class='input-group' >
				                    <input type="text" class="form-control" id="area" maxlength="99" placeholder="Ejemplo: Literatura"/>
				                    <span class="input-group-addon">
				                        <span class="fa fa-buysellads"></span>
				                    </span>
				                </div>
				            </div>
				        </div>
				    </div>
				</div>

				<div class="container">
	            <label>Fecha posible de Recepci&oacute;n de Documentos</label>
				    <div class="row">
				        <div class='col-sm-7'>
				            <div class="form-group">
				                <div class='input-group'>
				                    <input type='text' class="form-control" placeholder="dd/mm/yyyy" id='fechaDoc' maxlength="10"/>
				                    <span class="input-group-addon">
				                        <span class="glyphicon glyphicon-calendar"></span>
				                    </span>
				                </div>
				            </div>
				        </div>
				    </div>
				</div>

				<div class="container">
	            <label>Fecha posible de Presentaci&oacute;n</label>
				    <div class="row">
				        <div class='col-sm-7'>
				            <div class="form-group">
				                <div class='input-group'>
				                    <input type='text' class="form-control" placeholder="dd/mm/yyyy"  id="fechaPre" maxlength="10"/>
				                    <span class="input-group-addon">
				                        <span class="glyphicon glyphicon-calendar"></span>
				                    </span>
				                </div>
				            </div>
				        </div>				  
				    </div>
				</div>

				<div class="container">
	            <label>Observaci&oacute;n</label>
				    <div class="row">
				        <div class='col-sm-7'>
				            <div class="form-group">
				                <div class='input-group' >
				                    <input type="text" class="form-control" id="observacion" maxlength="254" placeholder="Que quiere mencionar?"/>
				                    <span class="input-group-addon">
				                        <span class="glyphicon glyphicon-eye-open"></span>
				                    </span>
				                </div>
				            </div>
				        </div>
				    </div>
				</div>

				<br/><br/>

              <div class="row">
	              <div class="col-xs-6">
	                  <button id="limpiarConcurso" type="button" class="btn btn-default btn-block btn-flat">Limpiar</button>
	                </div>
	                <div class="col-xs-6">
	                  <button id="registrarConcurso" type="button" class="btn btn-success btn-block btn-flat">Registrar</button>
	                </div>
              </div>

            </form>
        </div>
      </section>
    </div>
    <br/><br/>
    
{% endblock %}

{% block custom_javascripts %}
  <script>

    $('#fechaConcurso').datepicker({
      autoclose: true
    });

    $('#fechaDoc').datepicker({
      autoclose: true
    });

    $('#fechaPre').datepicker({
      autoclose: true
    });

  </script>

  <script src="{{ asset('assets/js/concursoOposicion/saveConcurso.js') }}"></script>

{% endblock %}