{% extends 'base.html.twig' %}

{% block content %}
    <section class="content-header">
      <h1>
        Apertura del Concurso
      </h1>
      <ol class="breadcrumb">
        <li><i class="fa fa fa-users"></i> Preparadores</li>
        <li class="active"> Apertura Concurso</li>
      </ol>
    </section>
    
    <br/>
    
    <div class="row">
      <section class="content-body">
        <div class="col-md-offset-1 col-md-10">
          <div class="box box-info">
            <div class="box-header">
              <a href="{{ path('solicitar') }}" class="btn btn-sm btn-info">
                <i class="fa fa-plus"></i>
                  Nueva Solicitud
              </a>
            </div>
            <div class="box-header">
              <h3 class="box-title">Listado de Solicitudes de Apertura</h3>

              <div class="box-tools">
                <div class="input-group input-group-sm" style="width: 150px;">
                  <input type="text" class="form-control pull-right" placeholder="Buscar">

                  <div class="input-group-btn">
                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
              <table class="table table-hover">
                <tr>
                  <th>Nro</th>
                  <th>Asignatura Solicitante</th>
                  <th>Estatus</th>
                  <th>Acciones</th>
                </tr>
                <tr>
                  <td>1</td>
                  <td>Algoritmo</td>
                  <td><span class="label label-success">Aprobada</span></td>
                  <td>
                    <button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#detalles">
                      Ver Detalles <i class="fa fa-eye"></i>
                    </button>
                    <a  class="btn btn-xs btn-primary" href="{{ path('gestionar_apertura') }}">
                      Gestionar <i class="fa fa-cogs"></i>
                    </a>
                  </td>
                </tr>
                <tr>
                  <td>2</td>
                  <td>Sistemas Operativos</td>
                  <td><span class="label label-warning">En Proceso</span></td>
                  <td>
                    <button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#detalles">
                      Ver Detalles <i class="fa fa-eye"></i>
                    </button>
                    <a  class="btn btn-xs btn-primary" href="{{ path('gestionar_apertura') }}">
                      Gestionar <i class="fa fa-cogs"></i>
                    </a>
                  </td>
                </tr>
                <tr>
                  <td>3</td>
                  <td>Elementos Discretos</td>
                  <td><span class="label label-primary">Approved</span></td>
                  <td>
                    <button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#detalles">
                      Ver Detalles <i class="fa fa-eye"></i>
                    </button>
                    <a  class="btn btn-xs btn-primary" href="{{ path('gestionar_apertura') }}">
                      Gestionar <i class="fa fa-cogs"></i>
                    </a>
                  </td>
                </tr>
                <tr>
                  <td>4</td>
                  <td>Diseño Digital</td>
                  <td><span class="label label-danger">Negada</span></td>
                  <td>
                    <button class="btn btn-xs btn-primary" data-toggle="modal" data-target="#detalles">
                      Ver Detalles <i class="fa fa-eye"></i>
                    </button>
                    <a  class="btn btn-xs btn-primary" href="{{ path('gestionar_apertura') }}">
                      Gestionar <i class="fa fa-cogs"></i>
                    </a>
                  </td>
                </tr>
              </table>
            </div>
            <!-- /.box-body -->
          </div>
          <!-- /.box -->
        </div>
        

        <!-- Modal -->
        <div class="modal" id="detalles" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h3 class="modal-title" id="myModalLabel">Detalles</h3>
              </div>
              <div class="modal-body">
                <dl class="dl-horizontal">
                  <dt>Asignatura Solicitante</dt>
                  <dd>Materia...</dd>
                  
                  <dt>Número de Plazas</dt>
                  <dd>Nro...</dd>
                  
                  <dt>Tema Examen Oral</dt>
                  <dd>Tema...</dd>
                  
                  <dt>Tema Examen Escrito</dt>
                  <dd>Tema...</dd>
                  
                  <dt>Jurado</dt>
                  <dd>Coordinador...</dd>
                  <dd>Principal 1...</dd>
                  <dd>Principal 2...</dd>
                  <dd>Suplente 1...</dd>
                  <dd>Suplente 2...</dd>
                  
                </dl>
              </div>
            </div>
          </div>
        </div>
        
        
      </section>
    </div>
    
{% endblock %}